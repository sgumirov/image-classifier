<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <TextView
      android:id="@+id/splash_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:fontFamily="@font/thsarabunnew"
      android:gravity="center_horizontal"
      android:text="@string/what_s_that_1_0"
      android:textColor="@android:color/white"
      android:textSize="48sp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />
  <ImageView
      android:id="@+id/splash_logo"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/triple_margin"
      android:src="@mipmap/web_hi_res_512"
      app:layout_constraintTop_toBottomOf="@id/splash_title"
      app:layout_constraintStart_toStartOf="@id/splash_title"
      app:layout_constraintEnd_toEndOf="@id/splash_title"
      />
  <TextView
      android:id="@+id/splash_description"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/single_margin"
      android:layout_marginEnd="@dimen/single_margin"
      android:layout_marginBottom="@dimen/double_margin"
      android:fontFamily="@font/thsarabunnew"
      android:gravity="center_horizontal"
      android:text="@string/description"
      android:textColor="@android:color/white"
      android:textSize="22sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />
</androidx.constraintlayout.widget.ConstraintLayout>
